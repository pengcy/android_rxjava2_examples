<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava demo"
                android:onClick="demo"/>

            <Button
                android:id="@+id/button_rx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava Obervable.defer"
                android:onClick="rx1Ex"/>

            <Button
                android:id="@+id/button_rx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava Obervable.fromCallable"
                android:onClick="rx2Ex"/>

            <Button
                android:id="@+id/button_rx3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava Single.fromCallable"
                android:onClick="rx3Ex"/>

            <Button
                android:id="@+id/button_rx4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava PublishSubject.create"
                android:onClick="rx4Ex"/>

            <Button
                android:id="@+id/button_rx5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava Single.just().map"
                android:onClick="rx5Ex"/>

            <Button
                android:id="@+id/button_rx6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava debounce.map"
                android:onClick="rx6Ex"/>

            <Button
                android:id="@+id/button_rx7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava Observable.zip"
                android:onClick="rx7Ex"/>

            <Button
                android:id="@+id/button_rx8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="rxjava multi flapmaps"
                android:onClick="rx8Ex"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>